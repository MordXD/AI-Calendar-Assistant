# === LLM PROVIDER ===
LLM_PROVIDER=openrouter                # или openrouter
OPENAI_API_KEY=         # если используешь OpenAI
OPENAI_MODEL=openai/gpt-5-mini
OPENAI_TEMPERATURE=0.2
OPENAI_API_HOST=https://api.openai.com/v1

# если используешь OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_API_HOST=https://openrouter.ai/api/v1

# === GOOGLE CALENDAR ===
PROJECT_TIMEZONE=Europe/Riga
GOOGLE_CREDS_JSON=./google_creds.json
GOOGLE_TOKEN_JSON=./google_token.json
GOOGLE_CALENDAR_ID=primary

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# === DATABASE & LOGGING ===
SQLITE_DB_PATH=calendar_assistant.db
LOG_LEVEL=DEBUG
